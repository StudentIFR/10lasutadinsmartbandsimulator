<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principală a aplicației, derivată din AppCompat -->
    <style name="Theme.SmartBandSimulator" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Culori principale -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Fără ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Temă pentru dialoguri, dacă ai nevoie -->
    <style name="Theme.SmartBandSimulator.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert"/>
</resources>
